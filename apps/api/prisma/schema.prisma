generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ctml_schema {
  id         Int         @id @default(autoincrement())
  version    Int         @unique
  schema     String      @db.LongText
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  // Many trials to many schema_ctml records
  trials     trial[]
  ctml_jsons ctml_json[]
  event      event[]

  @@index(fields: [version])
}

model ctml_json {
  id        Int          @id @default(autoincrement())
  version   ctml_schema? @relation(fields: [versionId], references: [id])
  versionId Int?
  // This should be encrypted
  data      Json?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  // One trial to many ctml_json records
  trial     trial?       @relation(fields: [trialId], references: [id])
  trialId   Int?
  event     event[]
}

model trial {
  id                     Int           @id @default(autoincrement())
  nct_id                 String
  nickname               String?
  principal_investigator String?
  // This status refers to the CTML status
  status                 status?       @default(DRAFT)
  // Many trials to many ctml_schema records
  ctml_schemas           ctml_schema[]
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt
  modifiedBy             user?         @relation("ModifiedBy", fields: [modifiedById], references: [id])
  modifiedById           Int?
  user                   user?         @relation("UserTrials", fields: [userId], references: [id])
  userId                 Int?
  // One trial to many ctml_json records
  ctml_jsons             ctml_json[]
  event                  event[]
}

model user {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String?
  username        String?
  first_name      String?
  email_verified  Boolean  @default(false)
  last_name       String?
  refresh_token   String?  @db.LongText
  keycloak_id     String?  @unique
  trials          trial[]  @relation("UserTrials")
  modified_trials trial[]  @relation("ModifiedBy")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  events          event[]

  @@index(fields: [keycloak_id])
}

model event {
  id            Int          @id @default(autoincrement())
  timestamp     DateTime     @default(now())
  type          event_type
  description   String?
  userId        Int?
  user          user?        @relation(fields: [userId], references: [id])
  metadata      Json?
  trial         trial?       @relation(fields: [trialId], references: [id])
  trialId       Int?
  ctml_json     ctml_json?   @relation(fields: [ctml_jsonId], references: [id])
  ctml_jsonId   Int?
  ctml_schema   ctml_schema? @relation(fields: [ctml_schemaId], references: [id])
  ctml_schemaId Int?
}

enum status {
  DRAFT
  IN_REVIEW
  COMPLETED
}

enum event_type {
  LoginSuccessful
  LoginFailed
  TrialCreated
  TrialRead
  TrialReadMany
  TrialUpdated
  TrialDeleted
  TrialDoesNotExist
  CtmlJsonCreated
  CtmlJsonRead
  CtmlJsonReadMany
  CtmlJsonUpdated
  CtmlJsonUpdatedMany
  CtmlJsonDeleted
  CtmlJsonDoesNotExist
  CtmlSchemaCreated
  CtmlSchemaRead
  CtmlSchemaReadMany
  CtmlSchemaUpdated
  CtmlSchemaDeleted
  CtmlSchemaDoesNotExist
}
